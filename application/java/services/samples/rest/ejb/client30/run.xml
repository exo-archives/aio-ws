<project name="simple.jonas.ejb3.client" basedir=".">

	<echo>Run Simple Example</echo>
	<property name="mainclass" value="org.exoplatform.services.ws.rest.ejb3.Main"/>
	<property name="version" value="1.2"/>
	<path id="jonas.classpath">
		<fileset dir="${jonas.home}/work/rars/jonas">
			<include name="**/*easybeans*.jar"/>
		</fileset>
		<fileset dir="${basedir}">
			<include name="**/*client*.jar"/>
		</fileset>
		<fileset dir="${jonas.home}/lib">
			<include name="client.jar"/>
		</fileset>
		<pathelement location="${basedir}/src/main/java/conf"/>
	</path>
	<java classname="${mainclass}">
		<classpath refid="jonas.classpath"/>
	</java>
</project>