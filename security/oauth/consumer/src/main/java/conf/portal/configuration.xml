<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.exoplaform.org/xml/ns/kernel_1_0.xsd http://www.exoplaform.org/xml/ns/kernel_1_0.xsd"
    xmlns="http://www.exoplaform.org/xml/ns/kernel_1_0.xsd">
  <component>
    <type>org.exoplatform.ws.security.oauth.impl.OAuthConsumerServiceImpl</type>
    <init-params>
      <value-param>
        <name>consumer.storage</name>
        <value>org.exoplatform.ws.security.oauth.storage.impl.TreeFileGrantedAccessorStorage</value>
      </value-param>
      <value-param>
        <name>consumer.client</name>
        <value>org.exoplatform.ws.security.oauth.impl.OAuthClientHttpImpl</value>
      </value-param>
      <!-- Consumers  -->
      <properties-param>
        <name>exo1</name>
        <property name="consumer.secret" value="81d1b5d080d1" />
        <property name="consumer.description" value="exo oauth consumer" />
        <!-- How long time cookie must be saved by client, in seconds (3 months in this example) -->
        <!-- NOTE If nothing set for this property then 31556926 (1 year) -->
        <property name="remmemberMaxAge" value="7889231" />
        <property name="provider.tokenRequestURL" value="http://localhost:8080/oauthprovider/request_token" />
        <property name="provider.authorizationURL" value="http://localhost:8080/oauthprovider/authorize" />
        <property name="provider.accessTokenURL" value="http://localhost:8080/oauthprovider/access_token" />
      </properties-param>
      <object-param>
        <name>consumer.storage.properties</name>
        <object type="org.exoplatform.ws.security.oauth.storage.GrantedAccessorStorageProperties">
          <field name="properties">
            <collection type="java.util.ArrayList">
              <value>
                <object type="org.exoplatform.ws.security.oauth.storage.GrantedAccessorStorageProperties$Property">
                  <field name="name">
                    <string>path</string>
                  </field>
                  <field name="value">
                    <string>../temp/oauth/tickets</string>
                  </field>
                </object>
              </value>
              <value>
                <object type="org.exoplatform.ws.security.oauth.storage.GrantedAccessorStorageProperties$Property">
                  <field name="name">
                    <string>cacheSize</string>
                  </field>
                  <field name="value">
                    <string>512</string>
                  </field>
                </object>
              </value>
            </collection>
          </field>
        </object>
      </object-param>
    </init-params>
  </component>
</configuration>