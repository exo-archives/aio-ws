  <profiles>
    <profile>
      <id>default</id>
      <activation>
        <property>
          <name>default</name>
        </property>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <org.exoplatform.tool.version>trunk</org.exoplatform.tool.version>
        <org.exoplatform.kernel.version>trunk</org.exoplatform.kernel.version>
        <org.exoplatform.core.version>trunk</org.exoplatform.core.version>
        <org.exoplatform.jcr.version>trunk</org.exoplatform.jcr.version>
      </properties>
    </profile>
  </profiles>
</project>
